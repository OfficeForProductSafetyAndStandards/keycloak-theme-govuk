{
  "name": "keycloak-theme-govuk",
  "version": "1.1.0",
  "devDependencies": {
    "govuk-elements-sass": "3.1.0",
    "govuk_template_jinja": "0.22.1",
    "npm-run-all": "^4.0.2",
    "npm-sass": "^2.2.1"
  },
  "scripts": {
    "build": "npm-run-all build:assets build:sass",
    "build:assets": "npm-run-all build:assets:govuk_template build:assets:govuk_frontend_toolkit build:sass",
    "build:assets:govuk_template": "npm-run-all build:assets:govuk_template_login build:assets:govuk_template_account",
    "build:assets:govuk_frontend_toolkit": "npm-run-all build:assets:govuk_frontend_toolkit_login build:assets:govuk_frontend_toolkit_account",
    "build:sass": "npm-run-all build:sass_login build:sass_account",

    "build:assets:govuk_template_login": "mkdir -p govuk/login/resources/vendor && cp -R node_modules/govuk_template_jinja/assets/ govuk/login/resources/vendor/govuk_template",
    "build:assets:govuk_frontend_toolkit_login": "mkdir -p govuk/login/resources/vendor/govuk_frontend_toolkit/javascripts && npm-run-all build:assets:govuk_frontend_toolkit:images_login build:assets:govuk_frontend_toolkit:js_login",
    "build:assets:govuk_frontend_toolkit:images_login": "cp -R node_modules/govuk_frontend_toolkit/images/ govuk/login/resources/vendor/govuk_frontend_toolkit/",
    "build:assets:govuk_frontend_toolkit:js_login": "cp -R node_modules/govuk_frontend_toolkit/javascripts/govuk/ govuk/login/resources/vendor/govuk_frontend_toolkit/javascripts/",
    "build:sass_login": "mkdir -p govuk/login/resources/css && mkdir -p govuk-internal/login/resources/css && npm-run-all build:sass:govuk_elements_login build:sass:govuk_elements-ie6_login build:sass:govuk_elements-ie7_login build:sass:govuk_elements-ie8_login build:sass:govuk-internal_login",
    "build:sass:govuk_elements_login": "npm-sass sass/govuk_elements.scss > govuk/login/resources/css/govuk_elements.css",
    "build:sass:govuk_elements-ie6_login": "npm-sass sass/govuk_elements-ie6.scss > govuk/login/resources/css/govuk_elements-ie6.css",
    "build:sass:govuk_elements-ie7_login": "npm-sass sass/govuk_elements-ie7.scss > govuk/login/resources/css/govuk_elements-ie7.css",
    "build:sass:govuk_elements-ie8_login": "npm-sass sass/govuk_elements-ie8.scss > govuk/login/resources/css/govuk_elements-ie8.css",
    "build:sass:govuk-internal_login": "npm-sass sass/govuk-internal/govuk-internal.scss > govuk-internal/login/resources/css/govuk-internal.css",

    "build:assets:govuk_template_account": "mkdir -p govuk/account/resources/vendor && cp -R node_modules/govuk_template_jinja/assets/ govuk/account/resources/vendor/govuk_template",
    "build:assets:govuk_frontend_toolkit_account": "mkdir -p govuk/account/resources/vendor/govuk_frontend_toolkit/javascripts && npm-run-all build:assets:govuk_frontend_toolkit:images_account build:assets:govuk_frontend_toolkit:js_account",
    "build:assets:govuk_frontend_toolkit:images_account": "cp -R node_modules/govuk_frontend_toolkit/images/ govuk/account/resources/vendor/govuk_frontend_toolkit/",
    "build:assets:govuk_frontend_toolkit:js_account": "cp -R node_modules/govuk_frontend_toolkit/javascripts/govuk/ govuk/account/resources/vendor/govuk_frontend_toolkit/javascripts/",
    "build:sass_account": "mkdir -p govuk/account/resources/css && mkdir -p govuk-internal/account/resources/css && npm-run-all build:sass:govuk_elements_account build:sass:govuk_elements-ie6_account build:sass:govuk_elements-ie7_account build:sass:govuk_elements-ie8_account build:sass:govuk-internal_account",
    "build:sass:govuk_elements_account": "npm-sass sass/govuk_elements.scss > govuk/account/resources/css/govuk_elements.css",
    "build:sass:govuk_elements-ie6_account": "npm-sass sass/govuk_elements-ie6.scss > govuk/account/resources/css/govuk_elements-ie6.css",
    "build:sass:govuk_elements-ie7_account": "npm-sass sass/govuk_elements-ie7.scss > govuk/account/resources/css/govuk_elements-ie7.css",
    "build:sass:govuk_elements-ie8_account": "npm-sass sass/govuk_elements-ie8.scss > govuk/account/resources/css/govuk_elements-ie8.css",
    "build:sass:govuk-internal_account": "npm-sass sass/govuk-internal/govuk-internal.scss > govuk-internal/account/resources/css/govuk-internal.css",

    "dist": "mkdir -p dist && npm-run-all dist:govuk dist:govuk-social-providers  dist:govuk-internal",
    "dist:govuk": "tar -czf dist/govuk.tar.gz govuk/",
    "dist:govuk-social-providers": "tar -czf dist/govuk-social-providers.tar.gz govuk-social-providers/",
    "dist:govuk-internal": "tar -czf dist/govuk-internal.tar.gz govuk-internal/",

    "clean": "npm-run-all clean_login clean_account",
    "clean_login": "rm -rf govuk/login/resources/ govuk-internal/login/resources dist/",
    "clean_account": "rm -rf govuk/account/resources/ govuk-internal/account/resources dist/"
  },
  "dependencies": {
    "npm": "^6.4.1"
  }
}
